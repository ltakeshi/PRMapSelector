<% list = [] %>
<div class="result">
<% @map_rule_list.each do |rule| %>
    <%= rule -%>
    <% list << rule %>
    </br>
<% end %>
</div>
<button class='my_clip_button btn btn-primary' id="my-button" data-clipboard-text="<%= list.join("\n") %>" title="Click to copy to clipboard.">
 <b>クリップボードにコピー</b>
</button>

<hr>

<script  type="text/javascript">
    var clip = new ZeroClipboard( $("button#my-button"));
</script>

<script type="text/javascript"> 
    if(!FlashDetect.installed){
        $("button").remove();
    }
</script>
